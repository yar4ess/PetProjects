                <Font name="System Bold Italic" size="19.0" />
            </font>
        </Button>
        <Label fx:id="helloLabel" layoutX="435.0" layoutY="8.0" text="%hello_view">
            <font>
                <Font size="26.0" />
            </font>
        </Label>

        <Button fx:id="infoButton" layoutX="121.0" layoutY="100.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="79.0" style="-fx-font-size: 16px; -fx-background-color: blue; -fx-text-fill: white; -fx-padding: 10 20; -fx-border-radius: 2; -fx-background-radius: 2;" text="Info" />
