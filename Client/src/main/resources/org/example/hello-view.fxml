        <Label fx:id="sumOfBudgetDescriptionLabel" layoutX="694.0" layoutY="445.0" style="-fx-font-style: italic;" text="%sum_of_budget_description" />

        <Button fx:id="minByNameButton" layoutX="736.0" layoutY="485.0" mnemonicParsing="false" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-border-radius: 2; -fx-background-radius: 2;" text="Min by Name" />
        <Label fx:id="minByNameDescriptionLabel" layoutX="656.0" layoutY="540.0" style="-fx-font-style: italic;" text="%min_by_name_description" />

        <Label layoutX="684.0" layoutY="536.0" style="-fx-font-style: italic;" />
