        <Button fx:id="TableButton" layoutX="90.0" layoutY="315.0" mnemonicParsing="false" onAction="#switchToTable" prefHeight="68.0" prefWidth="146.0" style="-fx-background-color: blue;" text="Table" textFill="WHITE">
